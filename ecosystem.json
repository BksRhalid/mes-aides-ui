{
    "apps" : [
        {
            "name"       : "Mes Aides",
            "script"     : "server.js",
            "exec_interpreter": "./node_modules/.bin/babel-node",
            "exec_mode"  : "fork",
            "env": {
                "PORT": 9000,
                "OPENFISCA_HOST": "localhost:2000"
            },
            "env_production": {
                "NODE_ENV": "production",
                "PORT": 8200,
                "OPENFISCA_HOST": "openfisca.sgmap.fr:80"
            }
        }
    ],
    "deploy" : {
        "production" : {
            "user"        : "mes-aides",
            "host"        : "sgmap.fr",
            "ref"         : "origin/rewrite",
            "repo"        : "https://github.com/sgmap/mes-aides-ui.git",
            "path"        : "~/mes-aides-ui",
            "post-deploy" : "npm install --prod && pm2 startOrRestart ecosystem.json --env production"
        }
    }
}
